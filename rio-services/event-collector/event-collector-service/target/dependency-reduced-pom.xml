<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>main</artifactId>
    <groupId>org.rioproject</groupId>
    <version>5.0-M3</version>
    <relativePath>../../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.rioproject.event-collector</groupId>
  <artifactId>event-collector-service</artifactId>
  <name>Module :: Event Collector Service Implementation</name>
  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>1.0-beta-6</version>
      </extension>
    </extensions>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/*IT*.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.rioproject.monitor:monitor-api</include>
                  <include>org.rioproject.event-collector:event-collector-api</include>
                  <include>org.rioproject.event-collector:event-collector-proxy</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Implementation-Title>Rio Project</Implementation-Title>
                    <Implementation-Version>${project.version}</Implementation-Version>
                    <Rio-Version>${project.version}</Rio-Version>
                    <Rio-Build>${maven.build.timestamp}</Rio-Build>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>run-integration-test</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <forkMode>always</forkMode>
              <systemProperties>
                <property>
                  <name>RIO_HOME</name>
                  <value>${basedir}/../../../distribution/target/rio-${project.version}</value>
                </property>
                <property>
                  <name>java.security.policy</name>
                  <value>${basedir}/../../../distribution/target/rio-${project.version}/policy/policy.all</value>
                </property>
              </systemProperties>
              <includes>
                <include>**/*IT*.java</include>
              </includes>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.rioproject</groupId>
      <artifactId>rio-api</artifactId>
      <version>5.0-M3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.rioproject</groupId>
      <artifactId>rio-lib</artifactId>
      <version>5.0-M3</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.5</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.rioproject</groupId>
      <artifactId>rio-test</artifactId>
      <version>5.0-M3</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>webster</artifactId>
          <groupId>org.rioproject</groupId>
        </exclusion>
        <exclusion>
          <artifactId>cybernode-api</artifactId>
          <groupId>org.rioproject.cybernode</groupId>
        </exclusion>
        <exclusion>
          <artifactId>cybernode-service</artifactId>
          <groupId>org.rioproject.cybernode</groupId>
        </exclusion>
        <exclusion>
          <artifactId>monitor-api</artifactId>
          <groupId>org.rioproject.monitor</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>1.0.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>logback-core</artifactId>
          <groupId>ch.qos.logback</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

